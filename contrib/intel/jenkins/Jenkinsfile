          build("builddir")
          echo "Copying log dirs."
          build("logdir")
        }
      }
    }
    stage ('bootstrap-ci') {
      steps {
        script {
          bootstrap_ci()
        }
      }
    }
    stage ('parallel-builds') {
      when { equals expected: true, actual: DO_RUN }
      parallel {
